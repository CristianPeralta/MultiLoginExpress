extends layout

block content
  h1= title
  p Welcome to #{title}

  if(users)
    each user in users
      .card
        .card-content
          .media
            .media-left
              figure.image.is-48x48
                img(src=user.photo, alt='Placeholder image')
            .media-content
              p.title.is-4 #{user.name}
              p.subtitle.is-6 #{user.email}
          .content
            | Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            | Phasellus nec iaculis mauris. 
            a @bulmaio
            | .
            a(href='#') #css
            a(href='#') #responsive
            br
            time(datetime='2016-1-1') 11:09 PM - 1 Jan 2016
          footer.card-footer
            a.card-footer-item(href='#') Save
            a.card-footer-item(href='#') Edit
            a.card-footer-item(href='#') Delete
