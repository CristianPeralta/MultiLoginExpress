
extends layout

block content
  h1= title
  p Welcome to home
  if(user)
      .card
        .card-content
          .media
            .media-left
              figure.image.is-48x48
                img(src=user.photo, alt='Placeholder image')
            .media-content
              p.title.is-4 #{user.name}
              p.subtitle.is-6 #{user.email}
              a(href='/') Salir

  
  else
    ul
      li
        a(href='auth/google') Login con Google
      li
        a(href='auth/facebook') Login con Facebook
      li
        a(href='auth/github') Login con Github
