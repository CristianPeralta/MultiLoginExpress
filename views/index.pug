extends layout
block content
  h1 .
  if(user)
      .card
        .card-content
          .media
            .media-left
              figure.image.is-48x48
                img(src=user.photo, alt='Placeholder image')
            .media-content
              p.title.is-4 #{user.name}
              p.subtitle.is-6
                i #{user.email}
              a(href='/') Salir
  else
    .login-box
      h2 Login 
      a#facebook-connect.social-button(href='auth/facebook')
        span Connect with Facebook
      a#google-connect.social-button(href='auth/facebook')
        span Connect with Google
      a#twitter-connect.social-button(href='auth/twitter')
        span Connect with Twitter
      a#github-connect.social-button(href='auth/github')
        span Connect with Github
  h3 .
